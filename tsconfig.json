{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom", "dom.iterable"],
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "rootDir": "src",
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "lib", "test", "mocks", "react"]
}

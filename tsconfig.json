{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "dom.iterable"],
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "rootDir": "src",
    "allowJs": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "typings"],
  "exclude": ["node_modules", "lib", "test", "mocks", "react", "cypress", "cypress.config.ts"]
}

{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended","plugin:@typescript-eslint/recommended","plugin:wc/recommended", "plugin:lit/recommended"],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json", "./tsconfig.test.json"]
    },
    "rules": {
        "lit/attribute-value-entities": 0,
        "lit/no-invalid-html": 0,
        "lit/binding-positions": 0
        // "jsx-quotes": [2, "prefer-single"],
    },
    "ignorePatterns": ["**/*.js", "mocks"]
}

{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "dom.iterable"],
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "rootDir": "react",
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "react"
  ],
}